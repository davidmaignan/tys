<h3>Form invitation</h3>
{% for flashMessage in app.session.flashbag.get('exam_candidate_error') %}
    <div class="flash notice">
        {{ flashMessage }}
    </div>
{% endfor %}
<form action="{{ path('exam_send_invitation') }}" method="post" name="exam_invitation" novalidate="novalidate">
    
    {{ form_widget(form) }}

    <div class="form-actions">
        <button id="sendInvitation" class="btn btn-primary">Send</button>
    </div>
</form>