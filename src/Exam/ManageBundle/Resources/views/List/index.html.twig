{% extends '::base.html.twig' %}


{% block body %}

<h1>Your exams</h1>



<table class="table table-bordered table-striped">
    
    
    <thead>
        <tr>
            <th>id</th>
            <th>Sections</th>
            <th>Number of candidates</th>
            <th>Created at</th>
            <th></th>
        </tr>
    </thead>
    {% for exam in exams %}
    <tbody>
        <tr>
            <td>{{ exam.id }}</td>
            <td>{{ exam.examCriteria.sections.0 }}</td>
            <td>{{ exam.examCriteria.numberCandidates }}</td>
            <td>{{ exam.createdAt |date("d F  Y") }}</td>
            <td>{{ exam.createdAt |date("g:ia") }}</td>
        </tr>
    </tbody>
    {% endfor %}
</table>



{% endblock body %}


