<div class="modal hide fade txt-middle" id="loginModal">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><i class="icon-remove"></i></button>
            <h3>Login </h3>
        </div>
        <div class="modal-body">		  
            <fieldset>
                <div class="control-group">
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-user"></i></span>
                            <input type="text" id="username" name="_username" value="{{ last_username }}"  class="span5">
                        </div>	
                    </div>
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on"><i class="icon-lock"></i></span>
                            <input type="password" id="password" name="_password" class="span5">
                        </div>	
                    </div>	
                    <div class="controls">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                    </div>
                </div>	
            </fieldset>
            <hr class="dashed">
            <button class="btn btn-info"><i class="glyphicons-twitter"></i> Login with Twitter</button>
            <button class="btn btn-danger"><i class="glyphicons-google_plus"></i> Login with Google</button>		
        </div>
        <div class="modal-footer">
            <a class="btn btn-warning pull-left" href="{{ path('security_resetting_request') }}">Forgot Password?</a>
            <button type="submit" class="btn btn-primary" id="loginBtn" value="" >{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
        </div>
    </form>
</div>
	