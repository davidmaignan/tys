{% extends '::base.html.twig' %}

{% block body %}

{% for key, message in app.session.getFlashes() %}
<div class="{{ key }}">{{ message|trans({}, 'FOSUserBundle') }}</div>
{% endfor %}

{% if error %}
<div class="alert alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" style="margin-bottom: 0;">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="control-group">
        <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="input-medium" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="password" id="password" name="_password" class="input-medium" />
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox" >
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
            </label>

            <button type="submit" class="btn" id="_submit" value="" >{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
        </div>
    </div>
</form>

{% endblock %}