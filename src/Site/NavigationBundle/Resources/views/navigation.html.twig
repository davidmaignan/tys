<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ path('homepage') }}">Rate Your Skills</a>

            <div class="nav-collapse">
                <ul class="nav">
                    <li class="active"><a href="#">{{ 'site_navigation.top.home' | trans }}</a></li>
                    <li><a href="#about">{{ 'site_navigation.top.about' | trans }}</a></li>
                    <li><a href="#contact">{{ 'site_navigation.top.contact' | trans }}</a></li>
                    <li><a href="{{ path('security_register') }}">{{ 'site_navigation.top.register' | trans }}</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="/page.html">
                            Question
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a href="{{ path('question_create_homepage') }}">Create</a></li>
                            <li><a href="{{ path('question_review_list') }}">Review</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                        <li>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</li> 

                        {% else %}
                            <a data-toggle="modal" href="#loginModal" class="btn btn-primary">Login</a>
                        {% endif %}
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="modal hide fade txt-middle" id="loginModal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><i class="icon-remove"></i></button>
            <h3>Login to Bounce</h3>
        </div>
        <div class="modal-body">		  
            {% render "SecurityAuthenticateBundle:Login:login" %}
            <hr class="dashed">
            <button class="btn btn-info"><i class="glyphicons-twitter"></i> Login with Twitter</button>
            <button class="btn btn-danger"><i class="glyphicons-google_plus"></i> Login with Google</button>		
        </div>
        <div class="modal-footer">
            <button class="btn btn-warning pull-left">Forgot Password?</button>
            <a href="index.html" class="btn btn-primary">Login</a>
        </div>
    </div>