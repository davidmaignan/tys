{% extends '::base.html.twig' %}


{% block body %}

<h1>{{ 'question.review.subject'|trans({}, 'QuestionReviewBundle') }}</h1>


<div class="row">

    <div class="span12">
        
        {% include 'QuestionTemplateBundle:Display:show.html.twig' %}
        
        <div class="form-actions">
            <div class="span4">
                <a class="btn btn-info" id="question-edit" href="{{ path('question_review_edit', {'id': question.id}) }}">Edit</a>
                
            </div>
            <div class="span3">
                <a class="btn btn-warning" id="question-ask-feedback" href="{{ path('question_reviewer_ask_feedback', {'id': question.id}) }}">Request feedback</a>
                <a class="btn btn-success" id="question-approved" href="{{ path('question_review_approved', {'id': question.id}) }}">Approved</a>
            </div>
            <div class="span4 pull-right">
                <a class="btn" id="question-next" href="#">Next</a> 
                <a class="btn" id="question-previous" href="#">Previous</a>
                <a class="btn" id="back-list" href="{{ path('question_review_list') }}">Back to list</a>
            </div>  
        </div>

    
    </div>
    
</div>

{% endblock body %}
