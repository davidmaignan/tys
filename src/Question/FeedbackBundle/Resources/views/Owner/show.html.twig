{% extends '::base.html.twig' %}


{% block body %}

<h1>Question waiting for your feedback</h1>

<div class="row">

    <div class="span12">
        
        {% include 'QuestionTemplateBundle:Display:show.html.twig' %}
        
        <div class="form-actions">
            <div class="span4">
                <a class="btn btn-info" id="question-edit" href="{{ path('question_feedback_edit', {'id': question.id}) }}">Edit</a>
                
            </div>
            <div class="span3">
                <a class="btn btn-success" id="question-send-approval" href="{{ path('question_owner_ask_approval', {'id': question.id}) }}">Send for approval</a>
            </div>
            <div class="span4 pull-right">
                <a class="btn" id="question-next" href="#">Next</a> 
                <a class="btn" id="question-previous" href="#">Previous</a>
                <a class="btn" id="back-list" href="{{ path('question_feedback_list') }}">Back to list</a>
            </div>  
        </div>

    
    </div>
    
</div>

{% endblock body %}